<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="333.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.JoinEventScreenController">
   <children>
      <Pane fx:id="upper_pane" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #227C9D;">
         <children>
            <Label fx:id="event_name_concern" alignment="CENTER" layoutX="182.0" layoutY="10.0" prefHeight="31.0" prefWidth="236.0" text="Event Name" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <VBox fx:id="middle_vbox" layoutX="100.0" layoutY="67.0" prefHeight="200.0" prefWidth="400.0">
         <children>
            <Label alignment="BOTTOM_LEFT" prefHeight="20.0" prefWidth="99.0" text="Location">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ComboBox fx:id="combo_box" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: FFCB77; -fx-background-radius: 3; -fx-border-color: FFFFFF;" />
            <HBox prefHeight="33.0" prefWidth="400.0">
               <children>
                  <Label alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="200.0" text="Date">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label alignment="BOTTOM_LEFT" prefHeight="34.0" prefWidth="200.0" text="Time">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="33.0" prefWidth="400.0" spacing="20.0">
               <children>
                  <ComboBox fx:id="combo_box1" prefHeight="40.0" prefWidth="190.0" style="-fx-background-color: FFCB77; -fx-background-radius: 3; -fx-border-color: FFFFFF;" />
                  <ComboBox fx:id="combo_box11" prefHeight="40.0" prefWidth="190.0" style="-fx-background-color: FFCB77; -fx-background-radius: 3; -fx-border-color: FFFFFF;" />
               </children>
            </HBox>
            <Label alignment="BOTTOM_LEFT" prefHeight="34.0" prefWidth="99.0" text="Role">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ComboBox fx:id="combo_box2" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: FFCB77; -fx-background-radius: 3; -fx-border-color: FFFFFF;" />
         </children>
      </VBox>
      <HBox fx:id="bottom_hbox" layoutY="293.0" prefHeight="40.0" prefWidth="600.0">
         <children>
            <Button fx:id="cancel_button" alignment="CENTER" mnemonicParsing="false" onAction="#onCancel" prefHeight="40.0" prefWidth="450.0" style="-fx-background-color: FE6D73;" text="CANCEL" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <Button fx:id="join_button" alignment="CENTER" mnemonicParsing="false" onAction="#onJoin" prefHeight="40.0" prefWidth="450.0" style="-fx-background-color: #0BB180;" text="JOIN" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</Pane>
