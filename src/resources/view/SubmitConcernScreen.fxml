<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="333.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SubmitConcernScreenController">
   <children>
      <Pane fx:id="upper_pane" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #227C9D;">
         <children>
            <Label fx:id="event_name_concern" alignment="CENTER" layoutX="182.0" layoutY="10.0" prefHeight="31.0" prefWidth="236.0" text="Event Name Concern" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <VBox fx:id="middle_vbox" layoutX="100.0" layoutY="67.0" prefHeight="200.0" prefWidth="400.0">
         <children>
            <Label prefHeight="20.0" prefWidth="99.0" text="Concern">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ComboBox fx:id="combo_box"  prefHeight="40.0" prefWidth="658.0" style="-fx-background-color: FFCB77; -fx-background-radius: 3; -fx-border-color: FFFFFF;" />
            <Pane prefHeight="41.0" prefWidth="640.0" />
            <Label prefHeight="18.0" prefWidth="99.0" text="Description">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextArea fx:id="description_textarea" prefHeight="234.0" prefWidth="640.0" style="-fx-background-color: FFCB77; -fx-border-radius: 3;" wrapText="true" />
         </children>
      </VBox>
      <HBox fx:id="bottom_hbox" layoutY="293.0" prefHeight="40.0" prefWidth="600.0">
         <children>
            <Button fx:id="cancel_button" alignment="CENTER" mnemonicParsing="false" onAction="#onCancel" prefHeight="40.0" prefWidth="450.0" style="-fx-background-color: FE6D73;" text="CANCEL" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="submit_button" mnemonicParsing="false" onAction="#onSubmit" prefHeight="40.0" prefWidth="450.0" style="-fx-background-color: #0BB180;" text="SUBMIT" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</Pane>
